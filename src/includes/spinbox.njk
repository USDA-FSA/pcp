<div class="pcp-spinbox pcp-spinbox--small pcp-spinbox--right {{CLASS}}">
  <div class="pcp-spinbox__number">
    <input class="fsa-input fsa-input--small pcp-spinbox__input" data-behavior="spinbox-kill-keypress spinbox-demo-change" id="{{ID}}" name="{{ID}}" type="number" value="{{VALUE}}" step="{{STEP}}" onchange="pcpDemoHighlightText('UNIQUE-ID-74851');">
  </div>
  <div class="pcp-spinbox__actions">
    <button tabindex="-1" class="pcp-spinbox__btn pcp-spinbox__btn--increment" type="button" data-behavior="spinbox spin--increment" data-amount="{{STEP}}" aria-label="Increase" title="Increase" onclick="pcpDemoHighlightText('UNIQUE-ID-74851');"></button>
    <button tabindex="-1" class="pcp-spinbox__btn pcp-spinbox__btn--decrement" type="button" data-behavior="spinbox spin--decrement" data-amount="{{STEP}}" aria-label="Decrease" title="Decrease" onclick="pcpDemoHighlightText('UNIQUE-ID-74851');"></button>
  </div>
</div>
