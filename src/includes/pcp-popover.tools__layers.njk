<div class="pcp-popover pcp-popover--size-small pcp-popover--lc" id="popover-tools__layers">
  <button class="pcp-popover__close" data-behavior="popover-dismiss" type="button"><img class="pcp-popover__close-icon" src="img/close.svg" alt="close"></button>
  <div class="pcp-popover__content">
    <div class="pcp-popover__hd">
      <h2 class="pcp-popover__title">Map Layers</h2>
    </div>
    <div class="pcp-popover__bd">
      <ul class="fsa-form-list">
        <li>
          <input class="fsa-checkbox" id="map-layer__States" type="checkbox" name="pies" value="map-layer__States" checked="checked">
          <label class="pcp-checkbox--block" for="map-layer__States">States</label>
        </li>
        <li>
          <input class="fsa-checkbox" id="map-layer__Counties" type="checkbox" name="pies" value="map-layer__Counties">
          <label class="pcp-checkbox--block" for="map-layer__Counties">Counties</label>
        </li>
        <li>
          <input class="fsa-checkbox" id="map-layer__Market-Regions" type="checkbox" name="pies" value="map-layer__Market-Regions" checked="checked">
          <label class="pcp-checkbox--block" for="map-layer__Market-Regions">Market Regions</label>
        </li>
        <li>
          <input class="fsa-checkbox" id="map-layer__Rift-Point-Markers" type="checkbox" name="pies" value="map-layer__Rift-Point-Markers" checked="checked">
          <label class="pcp-checkbox--block" for="map-layer__Rift-Point-Markers">Rift Point Markers</label>
        </li>
        <li>
          <input class="fsa-checkbox" id="map-layer__Rift-Point-Regions" type="checkbox" name="pies" value="map-layer__Rift-Point-Regions">
          <label class="pcp-checkbox--block" for="map-layer__Rift-Point-Regions">Rift Point Regions</label>
        </li>
        <li>
          <input class="fsa-checkbox" id="map-layer__LDP" type="checkbox" name="pies" value="map-layer__LDP">
          <label class="pcp-checkbox--block" for="map-layer__LDP">LDP</label>
        </li>
      </ul>
    </div>
  </div>
</div>
